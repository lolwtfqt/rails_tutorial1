<h1>New Article</h1>
<% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_for @article do |f| %>
    <div class="fields">
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div class="fields">
        <%= f.label :body %>
        <%= f.text_field :body %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
    
<% end %>

