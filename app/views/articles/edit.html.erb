<h1>Edit Article</h1>
<%= form_for @article do |f| %>
    <div class="fields">
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div class="fields">
        <%= f.label :body %>
        <%= f.text_field :body %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
    
<% end %>

<%= link_to 'Back', articles_path %>
